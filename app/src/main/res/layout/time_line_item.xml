<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- 左边 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 上面的竖线 -->
        <View
            android:id="@+id/refund_top_line"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/nodeLine" />

        <!-- 圆点 -->
        <ImageView
            android:id="@+id/refund_spot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/shape_refund" />

        <!-- 竖线 -->
        <View
            android:id="@+id/refund_foot_line"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/nodeLine" />
    </LinearLayout>

    <!-- 右边 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/refund_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_tag"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/refund_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/black_tag"
            android:textIsSelectable="true"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/refund_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textColor="@color/black_tag"
            android:textIsSelectable="true"
            android:textSize="12sp" />

        <!-- 底部分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/nodeLine"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>