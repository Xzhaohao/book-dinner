<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16sp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/seller_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/food_menu1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/seller_title"
                    style="@style/home_card_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/seller_distance"
                    style="@style/home_card_text"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="#AAAAAA" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:id="@+id/seller_star1"
                    style="@style/home_stars" />

                <ImageView
                    android:id="@+id/seller_star2"
                    style="@style/home_stars" />

                <ImageView
                    android:id="@+id/seller_star3"
                    style="@style/home_stars" />

                <ImageView
                    android:id="@+id/seller_star4"
                    style="@style/home_stars" />

                <ImageView
                    android:id="@+id/seller_star5"
                    style="@style/home_stars" />

                <TextView
                    android:id="@+id/seller_score"
                    style="@style/home_card_text" />

                <TextView
                    android:id="@+id/seller_sales"
                    style="@style/home_card_text"
                    android:layout_marginStart="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/seller_start_price"
                    style="@style/home_card_text"
                    android:textColor="@color/gray_6" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#CCCCCC" />

                <TextView
                    android:id="@+id/seller_dispatching"
                    style="@style/home_card_text"
                    android:textColor="@color/gray_6" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/mine_line"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#EEEEEE" />
</LinearLayout>