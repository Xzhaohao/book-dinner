<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
        style="@style/radio_button"
        android:layout_width="35dp"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="center"
        android:src="@mipmap/food1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7F7"
        android:orientation="vertical"
        android:paddingStart="15dp">

        <TextView
            android:id="@+id/cart_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/blackText3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cart_food_norms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_food_name"
            android:textColor="@color/gray_6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cart_food_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_food_norms"
            android:textColor="@color/gray_6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cart_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/blackText3"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>