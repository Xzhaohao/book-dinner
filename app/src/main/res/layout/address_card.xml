<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/address_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/address_state"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:button="@null"
            android:drawableStart="@drawable/radio_button_selector"
            android:drawablePadding="5dp"
            android:textColor="@color/blackText3"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/address_mobile"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:gravity="start|center" />

    <TextView
        android:id="@+id/address_name"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:gravity="start|center" />

    <View
        style="@style/mine_line"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="7dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:drawablePadding="5dp"
            android:text="@string/edit"
            app:drawableLeftCompat="@drawable/my_address_icon_edit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:text="@string/delete"
            app:drawableLeftCompat="@drawable/my_address_icon_delete" />
    </LinearLayout>

</LinearLayout>